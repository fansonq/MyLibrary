<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="100" android:propertyName="rotationX" android:valueTo="360" android:valueType="floatType" />
        </set>
    </item>

    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="200" android:propertyName="rotationX" android:valueTo="0" android:valueType="floatType" />
        </set>
    </item>
</selector>